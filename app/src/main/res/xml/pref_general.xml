<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <hackmed.pillar.pillarapp.TimePreference
        android:key="daily_time"
        android:title="Daily Time"/>


    <ListPreference
        android:key="pill_type"
        android:title="Pill Type"
        android:defaultValue="Lybrel"
        android:entries="@array/pill_array"
        android:entryValues="@array/pill_array"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>


    <ListPreference
        android:key="cycle_length"
        android:title="Cycle Length"
        android:defaultValue="28"
        android:entries="@array/cycle_length_array"
        android:entryValues="@array/cycle_length_array"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>

    <ListPreference
        android:key="placebo_days"
        android:title="Placebo Days"
        android:defaultValue="7"
        android:entries="@array/placebo_day_array"
        android:entryValues="@array/placebo_day_array"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>

    <EditTextPreference
        android:key="helicopter_nr"
        android:title="Helicopter #"
        android:defaultValue=""
        android:selectAllOnFocus="true"
        android:inputType="phone"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
